<?xml version="1.0" encoding="UTF-8"?>
<widget xmlns		= "http://www.w3.org/ns/widgets"
	xmlns:gap	= "http://phonegap.com/ns/1.0"
	id		= "com.klokantech.wwi-stories"
	version 	= "1.0.0">

	<name>World War I: Stories</name>

	<description>
		Personal stories from the first world war (ww1) collected by Europeana.
	</description>

	<author href="http://www.klokantech.com"
		email="petr.pridal@klokantech.com">
		Petr Pridal
	</author>

	<preference name="prerendered-icon" value="true" />

	<icon src="icons/Icon.png" gap:role="default" />
	
	<icon src="icons/Icon.png" width="57" height="57" />
	<icon src="icons/Icon72.png" gap:platform="ios" width="72" height="72" />
	<icon src="icons/Icon722x.png" width="114" height="114" />

